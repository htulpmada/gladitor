<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sikware.com.gladitor.StartScreen"
    android:background="@drawable/coloseum">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GLADITOR"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#c7000d"
        android:textColorHighlight="#c200b9"
        android:layout_weight="0.04"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/NewButton"
            android:layout_marginTop="99dp"
            android:textColor="#c7000d"
            android:background="@drawable/custom_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="CreatePlayer"
            android:elevation="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Game"
            android:id="@+id/LoadButton"
            android:textColor="#c7000d"
            android:background="@drawable/custom_button"
            android:onClick="LoadGame"
            android:layout_alignTop="@+id/NewButton"
            android:layout_centerHorizontal="true"
            android:elevation="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/exitButton"
            android:textColor="#c7000d"
            android:background="@drawable/custom_button"
            android:onClick="Exit"
            android:layout_alignTop="@+id/LoadButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="20dp" />
    </RelativeLayout>

</RelativeLayout>
