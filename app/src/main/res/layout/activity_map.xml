<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="getColor"
    android:id="@+id/scrn"
    android:background="@drawable/empire_map"
    android:elevation="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="pick somwhere to go"
        android:id="@+id/locate"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Go"
        android:id="@+id/Go"
        android:background="@drawable/custom_button"
        android:onClick="GoTo"
        android:textColor="#c70000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_margin="4dp"
        android:visibility="invisible"
        android:elevation="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="next area:"
        android:id="@+id/textView15"
        android:textColor="#000000"
        android:background="@drawable/custom_button_invert"
        android:layout_alignTop="@+id/Go"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  "
        android:id="@+id/next"
        android:textColor="#000000"
        android:background="@drawable/custom_button_invert"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/needed"
        android:textColor="#000000"
        android:background="@drawable/custom_button_invert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
