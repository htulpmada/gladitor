<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sikware.com.gladitor.Store"
    android:background="@drawable/store_b">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:id="@+id/buy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/custom_button"
        android:textColor="#c70000"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:onClick="buy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_button"
        android:textColor="#c70000"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:onClick="onBackPressed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Denarii: "
        android:id="@+id/gold"
        android:layout_alignBottom="@+id/buy"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="@drawable/custom_button_invert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Denarii:            "
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:background="@drawable/custom_button_invert"
        android:layout_above="@+id/gold"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/textView8"
        android:layout_above="@+id/done"
        android:id="@+id/ArmorRack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buy"
        android:layout_toStartOf="@+id/textView8"
        android:id="@+id/weaponRack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_toStartOf="@+id/ArmorRack"
        android:id="@+id/TransportRack"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TransportRack"
        android:layout_alignStart="@+id/gold"
        android:layout_alignEnd="@+id/gold"
        android:layout_above="@+id/textView8"
        android:layout_marginBottom="20dp"
        android:id="@+id/merchant"></RelativeLayout>

</RelativeLayout>
